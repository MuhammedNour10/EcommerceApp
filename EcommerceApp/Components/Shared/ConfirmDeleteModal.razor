

<!-- Modal -->
<div class="modal fade" id="bsConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to delete this @Title?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-end">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="() =>ConfirmationClicked(false) ">Close</button>
                <button type="button" class="btn btn-danger" @onclick="() => ConfirmationClicked(true)">Delete</button>
            </div>
        </div>
    </div>
</div>

@code
{
[Parameter]
public EventCallback<bool>  OnModCallback { get; set; }

[Parameter] 
    public string Title { get; set; } = "";


    private async Task ConfirmationClicked(bool isConfirmed)
    {
        if (isConfirmed)
        {
            await OnModCallback.InvokeAsync(true);
        }
        
    }
    
}
